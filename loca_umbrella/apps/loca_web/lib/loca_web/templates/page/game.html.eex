<div id="message"/>

<script>
  var game_id = '<%= @game_id %>';

  setInterval(() => {
    navigator.geolocation.getCurrentPosition(function(position) {
      console.log(position);
      fetch('/check_position/' + game_id, {
        method: 'POST',
        body: JSON.stringify([{
          lat: position.coords.latitude,
          lng: position.coords.longitude
        }])
      })
      .then(response => response.json())
      .then(console.log);
    });
  }, 1000);

</script>
